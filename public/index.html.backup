    <script>
        // JavaScript kodu aynƒ± kalacak, sadece bazƒ± metinler deƒüi≈üti
        const socket = io();
        const messagesDiv = document.getElementById("messages");
        const messageInput = document.getElementById("messageInput");
        const sendBtn = document.getElementById("sendBtn");
        const userCountSpan = document.getElementById("userCount");
        const typingIndicator = document.getElementById("typingIndicator");
        const themeToggle = document.getElementById("themeToggle");
        const emojiBtn = document.getElementById("emojiBtn");
        const emojiPicker = document.getElementById("emojiPicker");
        const usernameModal = document.getElementById("usernameModal");
        const usernameInput = document.getElementById("usernameInput");
        const usernameBtn = document.getElementById("usernameBtn");
        const avatarPicker = document.getElementById("avatarPicker");
        const roomList = document.getElementById("roomList");
        const userList = document.getElementById("userList");
        const roomTitle = document.getElementById("roomTitle");
        const fileBtn = document.getElementById("fileBtn");
        const fileInput = document.getElementById("fileInput");

        let typingTimer;
        let username = "";
        let userColor = "#667eea";
        let selectedAvatar = "üë§";
        let currentRoom = "genel";
        let editingMessageId = null;
        let currentDMTarget = null;
        let isAdmin = false;
        
        // WebRTC deƒüi≈ükenleri
        let localStream = null;
        let peerConnection = null;
        let currentCallTarget = null;
        let isMuted = false;
        const configuration = {
            iceServers: [
                { urls: 'stun:stun.l.google.com:19302' },
                { urls: 'stun:stun1.l.google.com:19302' }
            ]
        };
        
        // Avatar se√ßenekleri - Cyberpunk temasƒ±
        const avatars = ["ü§ñ", "üëæ", "üîÆ", "‚ö°", "üåê", "üíæ", "üéØ", "üéÆ", "üî•", "üíÄ", "ü¶æ", "üß†", "üî¨", "‚öôÔ∏è", "üíé", "üöÄ"];
        
        avatars.forEach(avatar => {
            const div = document.createElement("div");
            div.className = "avatar-option";
            div.textContent = avatar;
            div.onclick = () => {
                document.querySelectorAll(".avatar-option").forEach(el => el.classList.remove("selected"));
                div.classList.add("selected");
                selectedAvatar = avatar;
            };
            if (avatar === "ü§ñ") div.classList.add("selected");
            avatarPicker.appendChild(div);
        });
        
        // Emoji listesi - Cyberpunk temasƒ±
        const emojis = ["‚ö°", "üî•", "üíé", "üöÄ", "üéØ", "üéÆ", "üíæ", "üåê", "üîÆ", "üëæ", "ü§ñ", "üíÄ", "‚öôÔ∏è", "üî¨", "üß†", "ü¶æ", "üí•", "‚ú®", "üåü", "üí´"];
        
        emojis.forEach(emoji => {
            const span = document.createElement("span");
            span.textContent = emoji;
            span.onclick = () => {
                messageInput.value += emoji;
                emojiPicker.classList.remove("show");
                messageInput.focus();
            };
            emojiPicker.appendChild(span);
        });
        
        // Emoji picker toggle
        emojiBtn.addEventListener("click", () => {
            emojiPicker.classList.toggle("show");
        });
        
        document.addEventListener("click", (e) => {
            if (!emojiBtn.contains(e.target) && !emojiPicker.contains(e.target)) {
                emojiPicker.classList.remove("show");
            }
        });
        
        // Tema deƒüi≈ütir
        themeToggle.addEventListener("click", () => {
            document.body.classList.toggle("dark-mode");
            themeToggle.textContent = document.body.classList.contains("dark-mode") ? "‚òÄÔ∏è" : "üåô";
            localStorage.setItem("darkMode", document.body.classList.contains("dark-mode"));
        });
        
        if (localStorage.getItem("darkMode") === "true") {
            document.body.classList.add("dark-mode");
            themeToggle.textContent = "‚òÄÔ∏è";
        }
        
        // Dosya y√ºkleme
        fileBtn.addEventListener("click", () => fileInput.click());
        fileInput.addEventListener("change", (e) => {
            const file = e.target.files[0];
            if (file && file.type.startsWith("image/")) {
                const reader = new FileReader();
                reader.onload = (e) => {
                    const img = `<img src="${e.target.result}" class="file-preview">`;
                    socket.emit("chatMessage", `[DATA_PACKET] ${img}`);
                };
                reader.readAsDataURL(file);
            }
        });
        
        // Otomatik giri≈ü (session varsa)
        socket.on("autoLogin", (userData) => {
            username = userData.username;
            selectedAvatar = userData.avatar;
            userColor = userData.color;
            isAdmin = userData.isAdmin;
            
            // Modal'ƒ± kapat ve kullanƒ±cƒ± bilgilerini ayarla
            usernameModal.style.display = "none";
            socket.emit("setUsername", { username, avatar: selectedAvatar });
            messageInput.focus();
            
            // Header'da kullanƒ±cƒ± bilgisini g√∂ster
            updateHeaderUserInfo();
            
            showNotification(`SYSTEM: WELCOME BACK ${username.toUpperCase()} ‚ö°`);
        });

        // Header'da kullanƒ±cƒ± bilgisini g√ºncelle
        function updateHeaderUserInfo() {
            const userInfoHeader = document.getElementById("userInfoHeader");
            const headerAvatar = document.getElementById("headerAvatar");
            const headerUsername = document.getElementById("headerUsername");
            
            if (username) {
                headerAvatar.textContent = selectedAvatar;
                headerUsername.textContent = username.toUpperCase();
                if (isAdmin) {
                    headerUsername.innerHTML = `${username.toUpperCase()} <span class="admin-badge">ROOT</span>`;
                }
                userInfoHeader.style.display = "flex";
            } else {
                userInfoHeader.style.display = "none";
            }
        }

        // Kullanƒ±cƒ± adƒ± modal
        usernameBtn.addEventListener("click", () => {
            const name = usernameInput.value.trim();
            if (name) {
                username = name;
                socket.emit("setUsername", { username, avatar: selectedAvatar });
                usernameModal.style.display = "none";
                messageInput.focus();
                
                // Header'da kullanƒ±cƒ± bilgisini g√∂ster
                updateHeaderUserInfo();
            }
        });
        
        usernameInput.addEventListener("keypress", (e) => {
            if (e.key === "Enter") usernameBtn.click();
        });
        
        setTimeout(() => usernameInput.focus(), 100);
        
        // √áƒ±kƒ±≈ü yap butonu ekle (header'a)
        const logoutBtn = document.createElement("button");
        logoutBtn.className = "theme-toggle";
        logoutBtn.textContent = "üö™";
        logoutBtn.title = "DISCONNECT";
        logoutBtn.onclick = () => {
            if (confirm("TERMINATE CONNECTION?")) {
                socket.emit("logout");
                localStorage.clear();
                window.location.reload();
            }
        };
        document.querySelector(".header-right").insertBefore(logoutBtn, document.querySelector(".header-right").firstChild);
        
        // Ses bildirimi
        function playNotificationSound() {
            const audio = new Audio('data:audio/wav;base64,');
            audio.volume = 0.3;
            audio.play().catch(() => {});
        }

        // Socket olaylarƒ± (aynƒ± kalacak, sadece bazƒ± mesajlar deƒüi≈üecek)
        socket.on("userColor", (color) => {
            userColor = color;
        });
        
        socket.on("messageHistory", (history) => {
            history.forEach(data => {
                addMessage(data, false);
            });
        });
        
        socket.on("serverMessage", (msg) => {
            addSystemMessage(msg);
        });

        socket.on("userCount", (count) => {
            userCountSpan.textContent = count;
        });

        socket.on("chatMessage", (data) => {
            addMessage(data, true);
        });

        socket.on("privateMessage", (data) => {
            addMessage({...data, private: true}, true);
        });

        socket.on("messageEdited", (data) => {
            const msgEl = document.querySelector(`[data-message-id="${data.messageId}"]`);
            if (msgEl) {
                msgEl.querySelector(".message-text").textContent = data.newMessage;
                if (!msgEl.querySelector(".message-edited")) {
                    const editedTag = document.createElement("div");
                    editedTag.className = "message-edited";
                    editedTag.textContent = "[MODIFIED]";
                    msgEl.appendChild(editedTag);
                }
            }
        });

        socket.on("messageDeleted", (messageId) => {
            const msgEl = document.querySelector(`[data-message-id="${messageId}"]`);
            if (msgEl) msgEl.remove();
        });

        socket.on("userTyping", (data) => {
            if (data.typing) {
                typingIndicator.textContent = `${data.username.toUpperCase()} IS TYPING...`;
            } else {
                typingIndicator.textContent = "";
            }
        });

        socket.on("roomList", (rooms) => {
            roomList.innerHTML = "";
            rooms.forEach(room => {
                const div = document.createElement("div");
                div.className = "room-item" + (room.id === currentRoom ? " active" : "");
                div.innerHTML = `
                    <span>${room.name.toUpperCase()}</span>
                    <span class="room-badge">${room.userCount}</span>
                `;
                div.onclick = () => {
                    socket.emit("joinRoom", room.id);
                    currentRoom = room.id;
                    messagesDiv.innerHTML = '<div class="system-message">SYSTEM: CHANNEL CONNECTED ‚ö°</div>';
                    roomTitle.textContent = `üí¨ ${room.name.toUpperCase()}.CHAN`;
                };
                roomList.appendChild(div);
            });
        });

        socket.on("currentRoom", (roomId) => {
            currentRoom = roomId;
            socket.emit("getOnlineUsers");
        });

        socket.on("onlineUsers", (users) => {
            userList.innerHTML = "";
            users.forEach(user => {
                const div = document.createElement("div");
                div.className = "user-item";
                div.innerHTML = `
                    <div class="user-info-left">
                        <span class="user-avatar">${user.avatar}</span>
                        <span class="user-name" style="color: ${user.color}">
                            ${user.username.toUpperCase()}
                            ${user.isAdmin ? '<span class="admin-badge">ROOT</span>' : ''}
                        </span>
                    </div>
                    <div style="display: flex; align-items: center; gap: 5px;">
                        ${user.unreadCount > 0 ? `<span class="unread-badge">${user.unreadCount}</span>` : ''}
                        <button class="voice-icon-btn" onclick="startVoiceCall('${user.id}', '${user.username}', '${user.avatar}'); event.stopPropagation();" title="VOICE LINK">üé§</button>
                    </div>
                `;
                div.onclick = () => openDM(user.id, user.username);
                userList.appendChild(div);
            });
        });

                function openDM(userId, username) {
            currentDMTarget = userId;
            document.getElementById("dmTitle").textContent = `üí¨ ${username.toUpperCase()}.PRIVATE`;
            document.getElementById("dmModal").classList.add("show");
            document.getElementById("dmMessages").innerHTML = "";
            document.getElementById("dmInput").focus();
            
            // Mesaj ge√ßmi≈üini y√ºkle
            socket.emit("getPrivateMessages", userId);
        }

        function closeDM() {
            document.getElementById("dmModal").classList.remove("show");
            currentDMTarget = null;
        }

        socket.on("privateMessageHistory", (data) => {
            const dmMessages = document.getElementById("dmMessages");
            dmMessages.innerHTML = "";
            data.messages.forEach(msg => {
                addDMMessage(msg);
            });
        });

        socket.on("privateMessage", (data) => {
            // Eƒüer DM penceresi a√ßƒ±ksa ve doƒüru ki≈üiyse mesajƒ± ekle
            if (currentDMTarget === data.senderSocketId || currentDMTarget === data.targetSocketId) {
                addDMMessage(data);
            }
            
            // Online kullanƒ±cƒ± listesini g√ºncelle
            socket.emit("getOnlineUsers");
        });

        socket.on("newPrivateMessage", (data) => {
            showNotification(`PRIVATE CHANNEL: ${data.avatar} ${data.from.toUpperCase()}: ${data.preview}`);
            playNotificationSound();
        });

        function addDMMessage(data) {
            const dmMessages = document.getElementById("dmMessages");
            const isMe = data.senderSocketId === socket.id.substring(0, 6);
            
            const msgDiv = document.createElement("div");
            msgDiv.className = "message";
            msgDiv.style.marginLeft = isMe ? "auto" : "0";
            msgDiv.style.marginRight = isMe ? "0" : "auto";
            msgDiv.style.maxWidth = "70%";
            msgDiv.style.background = isMe ? "linear-gradient(135deg, #ff006e, #8338ec)" : "rgba(0, 0, 0, 0.8)";
            msgDiv.style.color = isMe ? "white" : "#00ff9f";
            msgDiv.style.border = isMe ? "2px solid #ff006e" : "2px solid #00ff9f";
            
            msgDiv.innerHTML = `
                <div class="message-header">
                    <div class="message-user">
                        <span style="font-size: 16px">${data.avatar}</span>
                        <span style="color: ${isMe ? 'white' : data.color}">${data.username.toUpperCase()}</span>
                    </div>
                    <span class="time" style="color: ${isMe ? 'rgba(255,255,255,0.8)' : 'rgba(0,255,159,0.8)'}">[${data.time}]</span>
                </div>
                <div class="message-text" style="color: ${isMe ? 'white' : '#00ff9f'}">${escapeHtml(data.message)}</div>
            `;
            dmMessages.appendChild(msgDiv);
            dmMessages.scrollTop = dmMessages.scrollHeight;
            
            // Mesajƒ± okundu olarak i≈üaretle
            if (!isMe) {
                socket.emit("markAsRead", data.id);
            }
        }

        document.getElementById("dmSendBtn").addEventListener("click", () => {
            const msg = document.getElementById("dmInput").value.trim();
            if (msg && currentDMTarget) {
                socket.emit("privateMessage", { targetId: currentDMTarget, message: msg });
                document.getElementById("dmInput").value = "";
            }
        });

        document.getElementById("dmInput").addEventListener("keypress", (e) => {
            if (e.key === "Enter") {
                document.getElementById("dmSendBtn").click();
            }
        });

        function showNotification(message) {
            const notification = document.getElementById("notification");
            notification.textContent = message;
            notification.classList.add("show");
            setTimeout(() => {
                notification.classList.remove("show");
            }, 5000);
        }

        socket.on("adminStatus", (status) => {
            isAdmin = status;
            if (isAdmin) {
                showNotification("SYSTEM: ROOT ACCESS GRANTED ‚ö°");
                // Header'da admin badge'i g√∂ster
                updateHeaderUserInfo();
            }
        });

        socket.on("kicked", (reason) => {
            alert("‚ö†Ô∏è SYSTEM ERROR: " + reason);
            window.location.reload();
        });

        socket.on("banned", (reason) => {
            alert("üö´ ACCESS DENIED: " + reason);
            window.location.href = "about:blank";
        });

        socket.on("muted", (reason) => {
            showNotification("üîá VOICE DISABLED: " + reason);
        });

        socket.on("unmuted", (reason) => {
            showNotification("üîä VOICE ENABLED: " + reason);
        });

        socket.on("warning", (reason) => {
            alert("‚ö†Ô∏è SYSTEM WARNING: " + reason);
        });

        socket.on("roomDeleted", (message) => {
            showNotification("CHANNEL TERMINATED: " + message);
            currentRoom = "genel";
            roomTitle.textContent = "üí¨ GENERAL.CHAN";
        });

        socket.on("chatHistoryCleared", () => {
            messagesDiv.innerHTML = '<div class="system-message">SYSTEM: CHAT LOGS PURGED BY ADMIN</div>';
        });

        // Mesaj g√∂nder
        function sendMessage() {
            const msg = messageInput.value.trim();
            if (msg) {
                if (editingMessageId) {
                    socket.emit("editMessage", { messageId: editingMessageId, newMessage: msg });
                    editingMessageId = null;
                    sendBtn.textContent = "TRANSMIT";
                } else {
                    socket.emit("chatMessage", msg);
                }
                messageInput.value = "";
                socket.emit("typing", false);
            }
        }

        sendBtn.addEventListener("click", sendMessage);
        messageInput.addEventListener("keypress", (e) => {
            if (e.key === "Enter") sendMessage();
        });

        messageInput.addEventListener("input", () => {
            socket.emit("typing", true);
            clearTimeout(typingTimer);
            typingTimer = setTimeout(() => {
                socket.emit("typing", false);
            }, 1000);
        });

        // Mesaj ekle
        function addMessage(data, playSound) {
            const msgDiv = document.createElement("div");
            msgDiv.className = "message" + (data.private ? " private" : "");
            msgDiv.setAttribute("data-message-id", data.id);
            
            const actions = data.id === socket.id ? `
                <div class="message-actions">
                    <button class="message-btn" onclick="editMessage('${data.id}', '${escapeHtml(data.message)}')">‚úèÔ∏è</button>
                    <button class="message-btn" onclick="deleteMessage('${data.id}')">üóëÔ∏è</button>
                </div>
            ` : "";
            
            msgDiv.innerHTML = `
                <div class="message-header">
                    <div class="message-user">
                        <span style="font-size: 20px">${data.avatar}</span>
                        <span style="color: ${data.color}">
                            ${data.username.toUpperCase()}
                            ${data.isAdmin ? '<span class="admin-badge">ROOT</span>' : ''}
                        </span>
                    </div>
                    <div style="display: flex; align-items: center; gap: 10px;">
                        <span class="time">[${data.time}]</span>
                        ${actions}
                    </div>
                </div>
                <div class="message-text">${escapeHtml(data.message)}</div>
                ${data.edited ? '<div class="message-edited">[MODIFIED]</div>' : ''}
            `;
            messagesDiv.appendChild(msgDiv);
            messagesDiv.scrollTop = messagesDiv.scrollHeight;
            
            if (playSound) playNotificationSound();
        }

        function editMessage(id, message) {
            editingMessageId = id;
            messageInput.value = message;
            sendBtn.textContent = "UPDATE";
            messageInput.focus();
        }

        function deleteMessage(id) {
            if (confirm("DELETE THIS DATA PACKET?")) {
                socket.emit("deleteMessage", id);
            }
        }

        function addSystemMessage(msg) {
            const msgDiv = document.createElement("div");
            msgDiv.className = "system-message";
            msgDiv.textContent = "SYSTEM: " + msg.toUpperCase();
            messagesDiv.appendChild(msgDiv);
            messagesDiv.scrollTop = messagesDiv.scrollHeight;
        }

        function escapeHtml(text) {
            const div = document.createElement("div");
            div.textContent = text;
            return div.innerHTML;
        }

        // Online kullanƒ±cƒ±larƒ± periyodik g√ºncelle
        setInterval(() => {
            socket.emit("getOnlineUsers");
        }, 5000);

        // ===== SESLI SOHBET (WebRTC) =====
        
        async function startVoiceCall(userId, username, avatar) {
            try {
                currentCallTarget = userId;
                
                // Mikrofon izni al
                localStream = await navigator.mediaDevices.getUserMedia({ audio: true, video: false });
                
                // Peer connection olu≈ütur
                peerConnection = new RTCPeerConnection(configuration);
                
                // Local stream'i ekle
                localStream.getTracks().forEach(track => {
                    peerConnection.addTrack(track, localStream);
                });
                
                // ICE candidate olayƒ±
                peerConnection.onicecandidate = (event) => {
                    if (event.candidate) {
                        socket.emit("ice-candidate", {
                            targetId: userId,
                            candidate: event.candidate
                        });
                    }
                };
                
                // Remote stream geldiƒüinde
                peerConnection.ontrack = (event) => {
                    const remoteAudio = new Audio();
                    remoteAudio.srcObject = event.streams[0];
                    remoteAudio.play();
                };
                
                // Offer olu≈ütur
                const offer = await peerConnection.createOffer();
                await peerConnection.setLocalDescription(offer);
                
                // Offer'ƒ± g√∂nder
                socket.emit("voice-offer", {
                    targetId: userId,
                    offer: offer
                });
                
                // Arama modalƒ±nƒ± g√∂ster
                showCallModal(username, avatar, "ESTABLISHING LINK...", false);
                
            } catch (error) {
                console.error("Voice link failed:", error);
                showNotification("AUDIO INTERFACE ACCESS DENIED!");
            }
        }
        
        // Gelen arama
        socket.on("voice-offer", async (data) => {
            const { from, fromUsername, fromAvatar, offer } = data;
            currentCallTarget = from;
            
            showCallModal(fromUsername, fromAvatar, "INCOMING TRANSMISSION...", true);
            
            // Accept butonu
            document.getElementById("acceptCallBtn").onclick = async () => {
                try {
                    // Mikrofon izni al
                    localStream = await navigator.mediaDevices.getUserMedia({ audio: true, video: false });
                    
                    // Peer connection olu≈ütur
                    peerConnection = new RTCPeerConnection(configuration);
                    
                    // Local stream'i ekle
                    localStream.getTracks().forEach(track => {
                        peerConnection.addTrack(track, localStream);
                    });
                    
                    // ICE candidate olayƒ±
                    peerConnection.onicecandidate = (event) => {
                        if (event.candidate) {
                            socket.emit("ice-candidate", {
                                targetId: from,
                                candidate: event.candidate
                            });
                        }
                    };
                    
                    // Remote stream geldiƒüinde
                    peerConnection.ontrack = (event) => {
                        const remoteAudio = new Audio();
                        remoteAudio.srcObject = event.streams[0];
                        remoteAudio.play();
                    };
                    
                    // Remote description ayarla
                    await peerConnection.setRemoteDescription(new RTCSessionDescription(offer));
                    
                    // Answer olu≈ütur
                    const answer = await peerConnection.createAnswer();
                    await peerConnection.setLocalDescription(answer);
                    
                    // Answer'ƒ± g√∂nder
                    socket.emit("voice-answer", {
                        targetId: from,
                        answer: answer
                    });
                    
                    // G√∂r√º≈üme ba≈üladƒ±
                    hideCallModal();
                    showVoiceIndicator(fromUsername);
                    
                } catch (error) {
                    console.error("Call accept failed:", error);
                    showNotification("AUDIO INTERFACE ACCESS DENIED!");
                    endVoiceCall();
                }
            };
        });
        
        // Answer geldi
        socket.on("voice-answer", async (data) => {
            const { answer } = data;
            
            if (peerConnection) {
                await peerConnection.setRemoteDescription(new RTCSessionDescription(answer));
                hideCallModal();
                showVoiceIndicator(document.getElementById("voiceCallName").textContent);
            }
        });
        
        // ICE candidate geldi
        socket.on("ice-candidate", async (data) => {
            const { candidate } = data;
            
            if (peerConnection) {
                await peerConnection.addIceCandidate(new RTCIceCandidate(candidate));
            }
        });
        
        // Arama sonlandƒ±
        socket.on("voice-call-ended", () => {
            endVoiceCall();
            showNotification("VOICE LINK TERMINATED");
        });
        
        function showCallModal(name, avatar, status, showAccept) {
            document.getElementById("voiceCallAvatar").textContent = avatar;
            document.getElementById("voiceCallName").textContent = name.toUpperCase();
            document.getElementById("voiceCallStatus").textContent = status;
            document.getElementById("acceptCallBtn").style.display = showAccept ? "block" : "none";
            document.getElementById("voiceCallModal").classList.add("show");
        }
        
        function hideCallModal() {
            document.getElementById("voiceCallModal").classList.remove("show");
        }
        
        function showVoiceIndicator(name) {
            document.getElementById("voiceIndicatorText").textContent = `VOICE LINK: ${name.toUpperCase()}`;
            document.getElementById("voiceIndicator").classList.add("show");
        }
        
        function hideVoiceIndicator() {
            document.getElementById("voiceIndicator").classList.remove("show");
        }
        
        function endVoiceCall() {
            // Stream'leri kapat
            if (localStream) {
                localStream.getTracks().forEach(track => track.stop());
                localStream = null;
            }
            
            // Peer connection'ƒ± kapat
            if (peerConnection) {
                peerConnection.close();
                peerConnection = null;
            }
            
            // Kar≈üƒ± tarafa bildir
            if (currentCallTarget) {
                socket.emit("end-voice-call", currentCallTarget);
                currentCallTarget = null;
            }
            
            // UI'ƒ± temizle
            hideCallModal();
            hideVoiceIndicator();
            isMuted = false;
        }
        
        function toggleMute() {
            if (localStream) {
                const audioTrack = localStream.getAudioTracks()[0];
                if (audioTrack) {
                    audioTrack.enabled = !audioTrack.enabled;
                    isMuted = !audioTrack.enabled;
                    document.getElementById("muteBtn").textContent = isMuted ? "üîá" : "üé§";
                }
            }
        }
        
        // Buton olaylarƒ±
        document.getElementById("rejectCallBtn").onclick = endVoiceCall;
        document.getElementById("endCallBtn").onclick = endVoiceCall;
        document.getElementById("muteBtn").onclick = toggleMute;
        
    </script>
</body>
